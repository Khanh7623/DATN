<!-- section header -->
<div class="section-header">
    <h3 class="section-title">Bài đăng gần nhất</h3>
    <img src="~/images/iconwave-02-01.png" class="wave" alt="wave" />
</div>

<div class="padding-30 rounded bordered">

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-12 col-sm-6">
                <!-- post -->
                <div class="post post-list clearfix">
                    <div class="thumb rounded">
                        <span class="post-format-sm">
                            <i class="icon-picture"></i>
                        </span>
                        <a asp-controller="Home" asp-route-slug="@item.Slug" asp-action="Details" asp-route-id="@item.Id">
                            <div class="inner">
                                <img src="~/upload/post/@item.Image" alt="post-title" />
                            </div>
                        </a>
                    </div>
                    <div class="details">
                        <ul class="meta list-inline mb-3">
                            <li class="list-inline-item"><a href="#"><img src="~/images/other/author-sm.png" class="author" alt="author" />@item.User.FullName</a></li>
                            @foreach (var item1 in item.PostInCategories)
                            {
                                <li class="list-inline-item"><a asp-controller="Categories" asp-action="Index" asp-route-slug="@item.Slug" asp-route-id="@item.Id">@item1.Category.Title</a></li>
                            }

                            <li class="list-inline-item">@item.Updated_At</li>
                        </ul>
                        <h5 class="post-title"><a asp-controller="Home" asp-route-slug="@item.Slug" asp-action="Details" asp-route-id="@item.Id">@item.Title</a></h5>
                        <p class="excerpt mb-0">@item.Summary</p>
                        <div class="post-bottom clearfix d-flex align-items-center">
                            <div class="social-share me-auto">
                                <button class="toggle-button icon-share"></button>
                                <ul class="icons list-unstyled list-inline mb-0">
                                    <li class="list-inline-item"><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                    <li class="list-inline-item"><a href="#"><i class="fab fa-twitter"></i></a></li>
                                    <li class="list-inline-item"><a href="#"><i class="fab fa-linkedin-in"></i></a></li>
                                    <li class="list-inline-item"><a href="#"><i class="fab fa-pinterest"></i></a></li>
                                    <li class="list-inline-item"><a href="#"><i class="fab fa-telegram-plane"></i></a></li>
                                    <li class="list-inline-item"><a href="#"><i class="far fa-envelope"></i></a></li>
                                </ul>
                            </div>
                            <div class="more-button float-end">
                                <a asp-controller="Home" asp-route-slug="@item.Slug" asp-action="Details" asp-route-id="@item.Id"><span class="icon-options"></span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }




    </div>
    <!-- load more button -->
    <div class="text-center">
        <button class="btn btn-simple">Tải thêm</button>
    </div>

</div>
