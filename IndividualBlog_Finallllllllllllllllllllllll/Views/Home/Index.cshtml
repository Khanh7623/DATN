
@model List<IndividualBlog.Models.Post>
@section SectionHero_Home {
    <partial name="PartialView/_PartialViewSlideHome" view-data="ViewData" />
 }

<!-- section header -->
<div class="section-header">
    <h3 class="section-title">Lựa chọn của biên tập viên</h3>
    <img src="~/images/iconwave-02-01.png" class="wave" alt="wave" />
</div>

<div class="padding-30 rounded bordered">
    <div class="row gy-5">
        <div class="col-sm-6">
            <!-- post -->
            <div class="post">
                <div class="thumb rounded">
                    @foreach (var item in ViewBag.GetOnePost.PostInCategories as List<IndividualBlog.Models.PostInCategory>)
                    {
                        <a asp-controller="Categories" asp-action="Index" asp-route-slug="@item.Category.Slug" asp-route-id="@item.CategoryId" class="category-badge position-absolute">@item.Category.Title</a>

                    }
                    <span class="post-format">
                        <i class="icon-picture"></i>
                    </span>
                    <a asp-controller="Home" asp-action="Details" asp-route-slug="@ViewBag.GetOnePost.Slug" asp-route-id="@ViewBag.GetOnePost.Id">
                        <div class="inner">
                            <img src="~/upload/post/@ViewBag.GetOnePost.Image" alt="@ViewBag.GetOnePost.Image" />
                        </div>
                    </a>
                </div>
                <ul class="meta list-inline mt-4 mb-0">
                    <li class="list-inline-item"><a href="#"><img src="~/images/other/author-sm.png" class="author" alt="author" />@ViewBag.GetOnePost.User.FullName</a></li>
                    <li class="list-inline-item">@ViewBag.GetOnePost.Updated_At</li>
                </ul>
                <h5 class="post-title mb-3 mt-3"><a asp-controller="Home" asp-action="Details" asp-route-slug="@ViewBag.GetOnePost.Slug" asp-route-id="@ViewBag.GetOnePost.Id">@ViewBag.GetOnePost.Title</a></h5>
                <p class="excerpt mb-0">@ViewBag.GetOnePost.Summary</p>
            </div>
        </div>
        <div class="col-sm-6">
            @foreach (var item in ViewData["GetRecentPost"] as List<IndividualBlog.Models.Post>)
            {
                <!-- post -->
                <div class="post post-list-sm square">
                    <div class="thumb rounded">
                        <a asp-controller="Home" asp-action="Details" asp-route-slug="@item.Slug" asp-route-id="@item.Id">
                            <div class="inner">
                                <img src="~/upload/post/@item.Image" alt="post-title" />
                            </div>
                        </a>
                    </div>
                    <div class="details clearfix">
                        <h6 class="post-title my-0"><a asp-controller="Home" asp-action="Details" asp-route-slug="@item.Slug" asp-route-id="@item.Id">@item.Title</a></h6>
                        <ul class="meta list-inline mt-1 mb-0">
                            <li class="list-inline-item">@item.Updated_At</li>
                        </ul>
                    </div>
                </div>
            }


        </div>
    </div>
</div>

<div class="spacer" data-height="50"></div>

