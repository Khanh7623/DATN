<section id="hero">

		<div class="container-xl">

			<div class="row gy-4">

				<div class="col-lg-8">
					
					<!-- featured post large -->
					<div class="post featured-post-lg">
						<div class="details clearfix">
							@foreach (var item in ViewBag.GetOnePost.PostInCategories as List<IndividualBlog.Models.PostInCategory>)
						   {
							   <a asp-controller="Categories" asp-action="Index" asp-route-slug="@item.Category.Slug" asp-route-id="@item.CategoryId" class="category-badge">@item.Category.Title</a>
						   }
							 
							<h2 class="post-title"><a  asp-controller="Home" asp-action="Details" asp-route-slug="@ViewBag.GetOnePost.Slug" asp-route-id="@ViewBag.GetOnePost.Id" >@ViewBag.GetOnePost.Title</a></h2>
							<ul class="meta list-inline mb-0">
								<li class="list-inline-item"><a href="#">@ViewBag.GetOnePost.User.FirtName @ViewBag.GetOnePost.User.LastName </a></li>
								<li class="list-inline-item">@ViewBag.GetOnePost.Updated_At</li>
							</ul>
						</div>
						<a asp-controller="Home" asp-action="Details" asp-route-slug="@ViewBag.GetOnePost.Slug" asp-route-id="@ViewBag.GetOnePost.Id" >
							<div class="thumb rounded">
								<div class="inner data-bg-image" data-bg-image="../upload/post/@ViewBag.GetOnePost.Image"></div>
							</div>
						</a>
					</div>

				</div>

				<div class="col-lg-4">

					<!-- post tabs -->
					<div class="post-tabs rounded bordered">
						<!-- tab navs -->
						<ul class="nav nav-tabs nav-pills nav-fill" id="postsTab" role="tablist">
							<li class="nav-item" role="presentation"><button aria-controls="popular" aria-selected="true" class="nav-link active" data-bs-target="#popular" data-bs-toggle="tab" id="popular-tab" role="tab" type="button">Phổ biến</button></li>
							<li class="nav-item" role="presentation"><button aria-controls="recent" aria-selected="false" class="nav-link" data-bs-target="#recent" data-bs-toggle="tab" id="recent-tab" role="tab" type="button">Gần nhất</button></li>
						</ul>
						<!-- tab contents -->
						<div class="tab-content" id="postsTabContent">
							<!-- loader -->
							<div class="lds-dual-ring"></div>
							<!-- popular posts -->
							<div aria-labelledby="popular-tab" class="tab-pane fade show active" id="popular" role="tabpanel">
								<!-- post -->
								@foreach (var item in ViewData["GetPopularPost"] as List<IndividualBlog.Models.Post>)
							   {
								   <div class="post post-list-sm circle">
									<div class="thumb circle">
										<a asp-controller="Home" asp-action="Details" asp-route-slug="@item.Slug" asp-route-id="@item.Id">
											<div class="inner">
												<img src="~/upload/post/@item.Image" alt="@item.Image" />
											</div>
										</a>
									</div>
									<div class="details clearfix">
										<h6 class="post-title my-0">
											<a asp-controller="Home" asp-action="Details" asp-route-slug="@item.Slug" asp-route-id="@item.Id">@item.Title</a>
										</h6>
										<ul class="meta list-inline mt-1 mb-0">
											<li class="list-inline-item">@item.Updated_At</li>
										</ul>
									</div>
								</div>
							   }
								
								
							</div>
							<!-- recent posts -->
							<div aria-labelledby="recent-tab" class="tab-pane fade" id="recent" role="tabpanel">
								@foreach (var item in ViewData["GetRecentPost"] as List<IndividualBlog.Models.Post>)
							   {
								  <!-- post -->
								<div class="post post-list-sm circle">
									<div class="thumb circle">
										<a asp-controller="Home" asp-action="Details" asp-route-slug="@item.Slug" asp-route-id="@item.Id">
											<div class="inner">
												<img src="~/upload/post/@item.Image" alt="@item.Image" />
											</div>
										</a>
									</div>
									<div class="details clearfix">
										<h6 class="post-title my-0"><a asp-controller="Home" asp-route-slug="@item.Slug" asp-action="Details" asp-route-id="@item.Id">@item.Title</a></h6>
										<ul class="meta list-inline mt-1 mb-0">
											<li class="list-inline-item">@item.Updated_At</li>
										</ul>
									</div>
								</div> 
							   }
								
								
							</div>
						</div>
					</div>
				</div>

			</div>

		</div>

	</section>